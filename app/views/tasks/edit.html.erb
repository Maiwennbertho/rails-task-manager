<h1>Edit Task</h1>
<%= form_with(model: @task, url: task_path(@task), local: true, method: :patch) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br>
  <%= form.label :details %>
  <%= form.text_area :details %>
  <br>
  <%= form.label :completed %>
  <%= form.check_box :completed %>
  <br>
  <%= form.submit %>
<% end %>
<%= link_to 'Back to List', tasks_path %>

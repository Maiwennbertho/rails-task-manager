<h1>Add New Task</h1>
<%= form_with(model: @task, utl: tasks_path, local: true) do |form| %>
<%= form.label :title %>
<%= form.text_field :title %>
<br>
<%= form.label :details %>
<%= form.text_field :detauls %>
<br>
<%= form.label :completed %>
<%= form.text_field :completed %>
<br>
<%form.submit%>
<% end %>
<%= link_to 'Back to List', tasks_path %>
